{
	"compilerOptions": {
		"target": "es6",
		"strict": true,
		"module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "lib": [
            "dom",
            "es5",
            "es2018",
            "es2018.promise",
            "es2019"
        ],
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "types": ["vuetify", "node", "express"],
        "baseUrl": ".",
        "paths": {
            "@client/*": ["client_src/*"]
        }
	},
    "include": [
        "./**/*.ts",
        "./**/*.vue"
    ]
}